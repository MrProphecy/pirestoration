# FunciÃ³n para mostrar el progreso
show_progress() {
    local percent=$1
    local progress_bar="|"
    local total=50  # TamaÃ±o de la barra

    for ((i = 0; i < total; i++)); do
        if ((i < percent * total / 100)); then
            progress_bar+="="
        else
            progress_bar+=" "
        fi
    done
    progress_bar+="| $percent%"

    echo -ne "\r$progress_bar"
}

